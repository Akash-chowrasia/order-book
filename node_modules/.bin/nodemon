#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/home/knife/workspace/personal/order-book-backend/node_modules/.pnpm/nodemon@2.0.7/node_modules/nodemon/bin/nodemon.js/node_modules:/home/knife/workspace/personal/order-book-backend/node_modules/.pnpm/nodemon@2.0.7/node_modules/nodemon/bin/node_modules:/home/knife/workspace/personal/order-book-backend/node_modules/.pnpm/nodemon@2.0.7/node_modules/nodemon/node_modules:/home/knife/workspace/personal/order-book-backend/node_modules/.pnpm/nodemon@2.0.7/node_modules:/home/knife/workspace/personal/order-book-backend/node_modules/.pnpm/node_modules:/home/knife/workspace/personal/order-book-backend/node_modules:/home/knife/workspace/personal/node_modules:/home/knife/workspace/node_modules:/home/knife/node_modules:/home/node_modules:/node_modules:/home/knife/workspace/personal/order-book-backend/node_modules/nodemon/bin/nodemon.js/node_modules:/home/knife/workspace/personal/order-book-backend/node_modules/nodemon/bin/node_modules:/home/knife/workspace/personal/order-book-backend/node_modules/nodemon/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../nodemon/bin/nodemon.js" "$@"
else 
  exec node  "$basedir/../nodemon/bin/nodemon.js" "$@"
fi
